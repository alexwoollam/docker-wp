#!/bin/bash

# args
env=$1

DIR=$(cd `dirname $0` && cd .. && pwd)

test -f "$DIR/.production" && env='prod'

cd $DIR
git submodule update --init --recursive
cd -

docker-compose -f $DIR/docker-compose.yml build --pull
docker-compose -f $DIR/docker-compose.yml stop php && docker-compose -f $DIR/docker-compose.yml rm -v --force php wpcli nginx

case $env in
	'prod')
		docker-compose -f $DIR/docker-compose.yml -f $DIR/docker-production.yml up -d
		;;
	*)
		docker-compose -f $DIR/docker-compose.yml up -d
		;;
esac
